#! /bin/bash

location_dir=$(find ~/Scripts ~/Documents/Projects  -maxdepth 1 \( -name '.*' -type d -prune \) -o -type d -print \
  | fzf  --with-nth=-1 --delimiter / --print-query \
  | tail -n1 )

if [[ -z $location_dir ]]; then
  exit 0
fi

location=$(basename "$location_dir")

if [[ ! -d "$location_dir" ]]; then
  read -rp "Create new project? [y/N] " userinput
  if [[ ! "$userinput" =~ ^[yY]$ ]]; then
    exit 0
  fi
  location_dir="$HOME/Documents/Projects/$location"
  mkdir "$location_dir"
fi

if ! tmux has-session -t "$location" 2>/dev/null; then
  tmux new-session -ds "$location" -c "$location_dir"
fi

if [[ -z $TMUX ]]; then
  tmux attach-session -t "$location"
else
  tmux switch-client -t "$location"
fi

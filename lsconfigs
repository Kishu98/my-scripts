#!/bin/bash

selected=$(find ~/.config -mindepth 1 -maxdepth 1 -type d |fzf --reverse)

if [[ -z $selected ]]; then
  exit 0
fi

session_name="configs"
window_name=$(basename $selected | tr " " "_")

selectfile=$(find $selected -mindepth 1 -maxdepth 1 | fzf --reverse)

if [[ -z $selectfile ]]; then
  exit 0
fi

if [[ -z $TMUX ]]; then
  nvim $selectfile
else
  tmux neww -n $window_name nvim $selectfile
fi

